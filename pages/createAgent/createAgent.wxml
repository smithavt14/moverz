<view class="page__container">
  <!-- Form Start -->
  <form bindsubmit="formSubmit" bindreset="formReset" class="page__form">
    
    <!-- Personal Information -->
    <view class="section__container">
      <input data-value="name" placeholder="姓名" id="nameInput" value="{{agent.name}}" bindinput="editValue"/>
      <input data-value="phone" type="number" placeholder="电话" value="{{agent.phone}}" bindinput="editValue"/>
    </view>

    <!-- Address Information -->
    <view class="section__container">
      <button wx:if="{{!agent.address}}" id="search-btn" bindtap="searchAddress">搜索地址</button>
      <view wx:else>{{agent.address}}</view>
      <image wx:if="{{agent.address}}" class="icon" src="/assets/icons/location.svg" bindtap="searchAddress"></image>
    </view>
    
    <!-- Company Information -->
    <view class="section__container">
      <input data-value="company" placeholder="公司名称（选填）" value="{{agent.company}}" bindinput="editValue"/>
    </view>
    
    <!-- Button Area -->
    <view class="btn-area">
      <button wx:if="{{hasUser}}" type="primary" bindtap="confirmAgent">确认</button>
      <button wx:else open-type="getUserInfo" bindgetuserinfo="userLogin" type="primary">login</button>
    </view>
  </form>
</view>