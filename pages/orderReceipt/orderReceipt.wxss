@import "../../styles/keyframes.wxss";

.receipt_container {
  width: 90vw;
  margin-top: 100rpx;
  position: relative;
  border-radius: 10rpx;
}

.receipt_container .check {
  height: 125rpx;
  width: 125rpx;
  /* background: #178E46; */
  border-radius: 50%;
  position: absolute;
  top: -62rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.receipt_container .check .icon {
  height: 35%;
}

.receipt_container .top {
  width: 100%;
  background: white;
  border-bottom: 2px dashed rgba(0,0,0,0.1);
  position: relative;
  text-align: center;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 75rpx;
  padding-bottom: 40rpx;
  border-radius: 10rpx;
}

.top::after {
  content: "";
  position: absolute;
  z-index: 100;
  bottom: -25rpx;
  left: -25rpx;
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  background: #F3F3F3;
}

.top::before {
  content: "";
  position: absolute;
  z-index: 100;
  bottom: -25rpx;
  right: -25rpx;
  height: 50rpx;
  width: 50rpx;
  border-radius: 50%;
  background: #F3F3F3;
}

.receipt_container .top .header {
  font-size: 40rpx;
  font-weight: 800;
  margin-bottom: 15rpx;
}

.receipt_container .top .subheader {
  font-size: 35rpx;
  color: rgba(0,0,0,0.5);
}

.receipt_container .bottom {
  width: 100%;
  background: white;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
}
.receipt_container .bottom .info_container {
  min-height: 120rpx;
  width: 95%;
  border-bottom: 1px solid rgba(0,0,0,0.1);
  display: flex;
  position: relative;
  justify-content: center;
  align-items: center;
  text-overflow: ellipsis;
  padding: 10rpx 0;
}

.receipt_container .bottom .info_container:nth-last-child(1) {
  border-bottom: none;
}

.receipt_container .bottom .info_container .left {
  width: 80%;
  flex-shrink: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding-left: 20rpx;
}

.receipt_container .bottom .info_container .left .title {
  font-size: 35rpx;
  color: #20324E;
}

.receipt_container .bottom .info_container .left .info {
  font-size: 30rpx;
  color: rgba(0,0,0,0.5);
}

.receipt_container .bottom .info_container .right {
  width: 20%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.receipt_container .bottom .info_container .right .icon {
  height: 50rpx;
  width: 50rpx;
}

.receipt_container .bottom .info_container .status_box {
  height: 75%;
  width: 95%;
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
}

.emissions_container {
  font-size: 35rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #178E46;
  border-radius: 10rpx;
  animation: dim-white 2s ease-in-out infinite;
}

.emissions_container .icon {
  height: 50rpx;
  width: 50rpx;
  margin: 0 20rpx;
}

.btn {
  width: 95%;
  height: 125rpx;
  position: absolute;
  bottom: 50rpx;
  border-radius: 25rpx;
  background: #20324E;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.pale-dim {
  animation: pale-dim 2s ease-in-out infinite;
}

.btn_area .short-btn {
  height: 125rpx;
  width: 45%;
  border-radius: 25rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  font-size: 35rpx;
}

.blue {
  background:#20324E;
}

.green {
  background: #178E46;
}