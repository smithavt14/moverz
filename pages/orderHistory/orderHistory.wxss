@import "../../styles/keyframes.wxss";

.order_container {
  width: 95%;
  background: white;
  border-radius: 10rpx;
  margin-top: 40rpx;
  box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.25);
  padding: 20rpx;
  box-sizing: border-box;
}

.order_container .status_container {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}

.order_container .status_container .id {
  font-size: 25rpx;
  color: rgba(0, 0, 0, 0.5);
}

.order_container .status_container .status {
  height: 50rpx;
  width: 40%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 10rpx;
}

.order_container .top .left {
  flex-grow: 1;
  color: #20324E;
}

.order_container .top .right {
  width: 30%;
  flex-shrink: 0;
  position: relative;
}

.order_container .top .right .status {
  height: 100%;
  width: 90%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  border-radius: 10rpx;
}

.info_container .title {
  font-size: 35rpx;
  font-weight: 800;
  color: #20324E;
  margin-top: 10rpx;
}

.info_container .subtitle {
  font-size: 30rpx;
  color: rgba(0, 0, 0, 0.5);
  text-overflow: ellipsis;
  white-space: nowrap; 
  overflow: hidden;
  margin-bottom: 10rpx;
}

.info_container .emissions_container {
  margin-top: 20rpx;
  font-size: 35rpx;
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #178E46;
  border-radius: 10rpx;
  animation: dim-white 2s ease-in-out infinite;
}

.info_container .emissions_container .icon {
  height: 50rpx;
  width: 50rpx;
  margin: 0 20rpx;
}