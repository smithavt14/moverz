<view class="page__container">
  <!-- Sender Information -->
  <view class="info_container">
    <image class="icon" src="/assets/icons/location.svg"></image>
    
    <!-- if no existing agent -->
    <view wx:if="{{!order.sender_agent}}" class="left_box" bindtap="createAgent" data-agent="sender_agent">
      <view class="top_value">寄件人信息</view>
      <view class="bottom_value">点击填写寄件地址</view>
    </view>

    <!-- if existing agent -->
    <view wx:else class="left_box" bindtap="createAgent" data-agent="sender_agent">
      <view class="top_value">{{order.sender_agent.name}}</view>
      <view class="bottom_value">{{order.sender_agent.address}}</view>
    </view>

    <view class="right_box" bindtap="chooseAgent">地址薄</view>
  </view>

  <!-- Receiver Information -->
  <view class="info_container">
    <image class="icon" src="/assets/icons/location.svg"></image>
    
    <!-- if no existing agent -->
    <view wx:if="{{!order.receiver_agent}}" class="left_box" bindtap="createAgent" data-agent="receiver_agent">
      <view class="top_value">收件人信息</view>
      <view class="bottom_value">点击填写收件地址</view>
    </view>

    <!-- if existing agent -->
    <view wx:else class="left_box" bindtap="createAgent" data-agent="receiver_agent">
      <view class="top_value">{{order.receiver_agent.name}}</view>
      <view class="bottom_value">{{order.receiver_agent.address}}</view>
    </view>

    <view class="right_box" bindtap="chooseAgent">地址薄</view>
  </view>
</view>

