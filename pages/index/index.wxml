<view class="page__container">
  <!-- Logo Container -->
  <view class="logo_container" bindtap="logout">
    <image 
    class="logo" 
    src="../../assets/logos/logo.png" 
    mode="aspectFit"></image>
  </view>

  <view class="navigation_container">
    <view class="flexbox">
      <view 
      class="btn" 
      style="color: #21334D"
      bindtap="navigateToIntro"
      hover-class="hover-blue">公司介绍</view>
      
      <view 
      class="btn" 
      style="color: #178E46"
      bindtap="navigateToOrderHistory"
      hover-class="hover-green">我的订单</view>
    </view>

    <!-- Weather Container -->
    <view class="weather__container">
      <view wx:if="{{ air }}" class="top_box" style="background: {{ air.quality.hex }}">
        <view class="box">{{ air.quality.aqi }}</view>
        <view class="box">
          <view class="top">{{ air.location }}</view>
          <view class="bottom">当前位置</view>
        </view>
      </view>
      <view class="bottom_box">
        <view class="progress_bar">
          <view 
          class="progress" 
          style="width: {{user.emissions_saved / 1000 }}%"></view>
          <view class="base"></view>
        </view>
        <view class="progress_info">
          <view class="box" style="color: #208D49">
            <view>节省</view>
            <image 
            src="../../assets/icons/emissions-green.png"
            class="icon"
            mode="aspectFit"></image>
            <view>{{user.emissions_saved / 1000}}</view>
            <view style="font-size: 15rpx;">KG</view>
          </view>
          <view class="box" style="color: #20324E">
            <view>目标</view>
              <image 
              src="../../assets/icons/emissions-blue.png"
              class="icon"
              mode="aspectFit"></image>
              <view>100</view>
              <view style="font-size: 15rpx;">KG</view>
            </view>
        </view>
      </view>
    </view>
  </view>
  
  <!-- Sender Information -->
  <view class="flex_container">
    <view class="info_container">
      <image class="icon" src="/assets/icons/shipping.png"></image>
      <!-- if no existing agent -->
      <view
      wx:if="{{ !order.sender }}" 
      class="left_box" 
      bindtap="navigateToCreateAgent"
      data-role="sender">
        <view class="top_value">寄件人信息</view>
        <view class="bottom_value">点击填写寄件地址</view>
      </view>

      <!-- if existing agent -->
      <view 
      wx:if="{{ order.sender }}"
      class="left_box" 
      bindtap="navigateToCreateAgent" 
      data-role="sender">
        <view class="top_value">{{order.sender.name}}</view>
        <view class="bottom_value">{{order.sender.address}}</view>
      </view>

      <view 
      class="right_box" 
      data-role="sender"
      bindtap="navigateToUserAgents">地址薄</view>
    </view>

    <!-- Receiver Information -->
    <view class="info_container">
      <image class="icon" src="/assets/icons/bullseye.png"></image>
      
      <!-- if no existing agent -->
      <view 
      wx:if="{{!order.receiver }}" 
      class="left_box" 
      bindtap="navigateToCreateAgent"
      data-role="receiver">
        <view class="top_value">收件人信息</view>
        <view class="bottom_value">点击填写收件地址</view>
      </view>

      <!-- if existing agent -->
      <view 
      wx:if="{{ order.receiver && hasUser }}"
      class="left_box" 
      bindtap="navigateToCreateAgent" 
      data-role="receiver">
        <view class="top_value">{{order.receiver.name}}</view>
        <view class="bottom_value">{{order.receiver.address}}</view>
      </view>

      <view class="right_box" 
      bindtap="navigateToUserAgents"
      data-role="receiver">
        <text>地址薄</text> 
      </view>
    </view>

    <!-- Delivery Time -->
    <view class="order_container">
      <image class="icon" src="/assets/icons/clock.png"></image>
      <view class="left_box">
        上门时间
      </view>
      <view class="right_box">
        <picker mode="time" value="{{order.display.time.hour}}" bindchange="bindDateChange" data-type="hour">
          <view wx:if="{{ !order.pickup_time }}" style="display: flex; align-items: center;" id="light-content">
            <view>一小时内</view>
            <image src="/assets/icons/arrow.png" class="arrow"></image>
          </view>
          <view wx:else style="display: flex; align-items: center;">
            <view>{{order.display.time.hour}}</view>
            <image src="/assets/icons/arrow.png" class="arrow"></image>
          </view>
        </picker>
      </view>
    </view>

      <!-- Delivery Date -->
    <view class="order_container">
      <image class="icon" src="/assets/icons/calendar.png"></image>
      <view class="left_box">
        上门日期
      </view>
      <view class="right_box">
        <picker mode="date" value="{{order.display.time.date}}" start="{{display.date}}" bindchange="bindDateChange" data-type="date">
          <view wx:if="{{ !order.pickup_time }}" style="display: flex; align-items: center;" id="light-content">
            <view>今天</view>
            <image src="/assets/icons/arrow.png" class="arrow"></image>
          </view>
          <view wx:else style="display: flex; align-items: center">
            <view>{{order.display.time.date}}</view>
            <image src="/assets/icons/arrow.png" class="arrow"></image>
          </view>
        </picker>
      </view>
    </view>

    <!-- Parcel Information -->
    <view class="order_container" bindtap="createParcel">
      <image class="icon" src="/assets/icons/box.png"></image>
      <view class="left_box">
        物品信息
      </view>
      <view wx:if="{{!order.parcel}}" class="right_box" id="light-content">
        <view>请填写</view>
        <image src="/assets/icons/arrow.png" class="arrow"></image>
      </view>

      <view wx:else class="right_box">
        <view>{{order.parcel.category}} {{order.parcel.weight}} 公斤</view>
        <image src="/assets/icons/arrow.png" class="arrow"></image>
      </view>
    </view>
  </view>

  <!-- Button Area -->
  <view class="btn_area">
    <view wx:if="{{ hasUser }}" class="container">
      <view class="left">
        <view> 
          <text style="color: rgba(255,255,255,0.7)">费用 </text>
          <text wx:if="{{!order.price}}"> - - </text>
          <text wx:else>{{order.price}}</text>
          <text> 元</text>  
        </view>
      </view>
      <view class="triangle"></view>
      <view class="right" bindtap="processOrder">立即下单</view>
    </view>

    <!-- Login Button -->
    <button 
    wx:else
    open-type="getUserInfo" 
    bindgetuserinfo="userInfoHandler"
    class="login-btn {{ loginAnimation || btnLoading ? 'dim' : '' }}"
    >登陆</button>
  </view>
</view>