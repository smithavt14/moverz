<view class="circle_box" style="width:{{size}}px;height:{{size}}px">
  
  <canvas 
  class="circle_bg" 
  canvas-id="{{draw}}bg" 
  style="width:{{size}}px; height:{{size}}px"></canvas> 

  <canvas 
  class="circle_draw" 
  canvas-id="{{draw}}" 
  style="width:{{size}}px; height:{{size}}px"></canvas>
  
  <view class="content_box">
    <view class="top">
      <view class="left" style="font-weight: 200">Saved</view>
      <image src="../../assets/icons/emissions-green.png" mode="aspectFit" class="icon"></image>
      <view class="right">{{emissions_kg}}</view>
      <view style="font-size: 15rpx">KG</view>
    </view>
    <view class="bottom">
      <view class="left">Goal</view>
      <image src="../../assets/icons/emissions-blue.png" mode="aspectFit" class="icon"></image>
      <view>100</view>
      <view style="font-size: 15rpx">KG</view>
    </view>
  </view>
</view>